<Page x:Class="DesktopApp.Forms.Reason"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      xmlns:local="clr-namespace:DesktopApp.Forms"
      mc:Ignorable="d" 
      d:DesignHeight="450" d:DesignWidth="800"
      Title="Reason">

    <Grid Margin="10">
        <StackPanel>
            <Grid>
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="*"></ColumnDefinition>
                    <ColumnDefinition Width="*"></ColumnDefinition>
                </Grid.ColumnDefinitions>
                <Grid.RowDefinitions>
                    <RowDefinition Height="*"></RowDefinition>
                    <RowDefinition Height="*"></RowDefinition>
                </Grid.RowDefinitions>
                <TextBlock Grid.Row="0" Grid.Column="0" Text="Zadej důvod:" FontWeight="Bold" FontSize="15"></TextBlock>
                <TextBox Grid.Row="1" TextWrapping="Wrap" Height="80" x:Name="reason"></TextBox>
                <Button Name="btnConfirm" Grid.Column="1" Grid.Row="1" Click="btnConfirm_Click" HorizontalAlignment="Center" VerticalAlignment="Center" Content=" Potvrdit " Height="40" Width="80"></Button>
            </Grid>
        </StackPanel>
    </Grid>
</Page>
